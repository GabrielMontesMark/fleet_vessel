<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Fleet Vehicle Model Form View -->
    <record id="fleet_vehicle_model_form_vessel" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.form.vessel</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Vessel Information page in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Vessel Information" invisible="vehicle_type != 'vessel'">
                    <group>
                        <group string="Dimensions">
                            <field name="vessel_length"/>
                            <field name="vessel_beam"/>
                            <field name="vessel_draft"/>
                            <field name="length_unit"/>
                        </group>
                        <group string="Tonnage">
                            <field name="vessel_tonnage"/>
                            <field name="tonnage_unit"/>
                        </group>
                    </group>
                    <group>
                        <group string="Classification">
                            <field name="vessel_type_detail"/>
                            <field name="vessel_flag"/>
                        </group>
                        <group string="Maritime Identification">
                            <field name="vessel_imo_number"/>
                            <field name="vessel_mmsi"/>
                            <field name="vessel_call_sign"/>
                        </group>
                    </group>
                    <group>
                        <group string="Construction">
                            <field name="hull_material"/>
                            <field name="engine_type"/>
                        </group>
                        <group string="Performance &amp; Capacity">
                            <field name="max_speed_knots"/>
                            <field name="passenger_capacity"/>
                            <field name="crew_capacity"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <!-- Hide car/bike specific fields when vessel is selected -->
            <!-- Note: These fields may not exist in all Odoo 19 versions -->
            <!-- Uncomment if needed:
            <xpath expr="//field[@name='seats']" position="attributes">
                <attribute name="invisible">vehicle_type == 'vessel'</attribute>
            </xpath>
            <xpath expr="//field[@name='doors']" position="attributes">
                <attribute name="invisible">vehicle_type == 'vessel'</attribute>
            </xpath>
            <xpath expr="//field[@name='trailer_hook']" position="attributes">
                <attribute name="invisible">vehicle_type == 'vessel'</attribute>
            </xpath>
            -->
        </field>
    </record>

    <!-- Extend Fleet Vehicle Model Tree View -->
    <record id="fleet_vehicle_model_list_vessel" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.tree.vessel</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_type']" position="after">
                <field name="vessel_type_detail" optional="hide"/>
                <field name="vessel_length" optional="hide"/>
                <field name="vessel_tonnage" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Add search filters for vessels -->
    <record id="fleet_vehicle_model_search_vessel" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.search.vessel</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="vessel" string="Vessels" domain="[('vehicle_type', '=', 'vessel')]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Vessel Type" name="group_vessel_type" context="{'group_by': 'vessel_type_detail'}"/>
                <filter string="Hull Material" name="group_hull_material" context="{'group_by': 'hull_material'}"/>
            </xpath>
        </field>
    </record>
</odoo>
