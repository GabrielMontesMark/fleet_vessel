<odoo>
    <data noupdate="1">

        <!-- CRON 05 AM hora Miami = 09:00 UTC -->
        <record id="ir_cron_update_prices_am" model="ir.cron">
            <field name="name">Actualizar Precios 05 AM</field>
            <field name="model_id" ref="model_argus_price"/>
            <field name="state">code</field>
            <field name="code">model.importar_precios_argus()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-09-17 09:00:00</field>
            <field name="active">True</field>
        </record>

        <!-- CRON 05 PM hora Miami = 21:00 UTC -->
        <record id="ir_cron_update_prices_pm" model="ir.cron">
            <field name="name">Actualizar Precios 05 PM</field>
            <field name="model_id" ref="model_argus_price"/>
            <field name="state">code</field>
            <field name="code">model.importar_precios_argus()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-09-17 21:00:00</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
