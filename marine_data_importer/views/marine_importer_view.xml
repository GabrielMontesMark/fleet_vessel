<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marine_data_importer_form" model="ir.ui.view">
        <field name="name">marine.data.importer.form</field>
        <field name="model">marine.data.importer</field>
        <field name="arch" type="xml">
            <form string="Import Marine Data">
                <group>
                    <div class="alert alert-info" role="alert">
                        Click the button below to import vessel data from the external database 'hso_marine_test'.
                    </div>
                </group>
                <footer>
                    <button name="action_import_data" string="Import Data" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_marine_data_importer" model="ir.actions.act_window">
        <field name="name">Import Marine Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">marine.data.importer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_marine_data_importer"
              name="Import External Data"
              parent="fleet.menu_root"
              action="action_marine_data_importer"
              sequence="99"/>
</odoo>
